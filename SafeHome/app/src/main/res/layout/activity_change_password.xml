<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIHandler.changePassword">

    <RelativeLayout
        android:id="@+id/relel_ContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/background_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_bg_half1"/>

        <ImageView
            android:id="@+id/background_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_bg_half2"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_cp_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextLabel"
            >

            <EditText
                android:id="@+id/editText__cp_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:ems="10"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Current Password"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_cp_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextLabel"
            >

            <EditText
                android:id="@+id/editText_cp_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:ems="10"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/password_icon"
                android:hint="New Password"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout_cp_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextLabel"
            >

            <EditText
                android:id="@+id/editText_cp_con_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:ems="10"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Confirm Password"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_cp_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Submit"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:elevation="20dp"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>