<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/background_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_bg_half1"/>

    <ImageView
        android:id="@+id/background_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_bg_half2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/smart_home_logo96x96"
            android:layout_gravity="center"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="First Name*"/>


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="Last Name"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="Email*"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="Username*"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="Contact No.*"/>

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLayout_signUp_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/MyTextLabel">

                    <EditText
                        android:id="@+id/editText_signUp_occupation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:singleLine="true"
                        android:inputType="textPersonName"
                        android:textStyle="bold"
                        android:ems="10"
                        android:hint="Occupation"/>

                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_signUp_rentFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyTextLabel"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/editText_signUp_rentFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorWhite"
                            android:textColor="@color/colorWhite"
                            android:singleLine="true"
                            android:inputType="none"
                            android:drawableRight="@drawable/ic_date_24dp"
                            android:drawablePadding="10dp"
                            android:textStyle="bold"
                            android:focusable="false"
                            android:ems="10"
                            android:hint="Rent From"/>

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout_signUp_rentTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyTextLabel"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/editText_signUp_rentTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorWhite"
                            android:textColor="@color/colorWhite"
                            android:singleLine="true"
                            android:drawableRight="@drawable/ic_date_24dp"
                            android:drawablePadding="10dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:textStyle="bold"
                            android:ems="10"
                            android:hint="Rent From"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_signUp_request"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Request"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:elevation="20dp"
            />
    </LinearLayout>

</RelativeLayout>