<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.studentbook.HomeFragement"
    android:background="@drawable/background_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:gravity="">

            <View
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:background="@drawable/background_gradient2"
                android:layout_marginLeft="50dp"
                android:id="@+id/view" />
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/background_gradient2" />

            <ImageView
                android:id="@+id/pp_imageView"
                android:layout_width="200dp"
                android:layout_height="175dp"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fullname_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/dateOfbirth_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/gender_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/email_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/contact_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/username_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="username"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>


                <TextView
                    android:id="@+id/password_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="password"
                    />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
