<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.studentbook.Registration"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Create New Account"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_gradient"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:paddingBottom="15dp">



            <ImageView
                android:id="@+id/userIcon_ImageView"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/camera"
                android:background="@drawable/bg_circle_green"
                />

            <ImageView
                android:id="@+id/userImage_ImageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/fullName_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Full name"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/person_icon"
                android:inputType="textPersonName" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Date of birth"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/date_icon"
                android:layout_marginTop="15dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >

                <Spinner
                    android:id="@+id/date_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>
                <Spinner
                    android:id="@+id/month_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>
                <Spinner
                    android:id="@+id/year_spinner"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gender"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/gender_icon"
                android:layout_marginTop="15dp"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/gender_radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <RadioButton
                    android:id="@+id/male_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Male"
                    android:layout_marginRight="50dp"/>
                <RadioButton
                    android:id="@+id/female_radio"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"/>

            </RadioGroup>

            <EditText
                android:id="@+id/mailId_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Email address"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/mail_icon"
                android:inputType="textEmailAddress" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>

            <EditText
                android:id="@+id/contact_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/contact_icon"
                android:hint="Contact number"
                android:inputType="number" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>


            <EditText
                android:id="@+id/userName_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/user_icon"
                android:hint="Username"
                android:inputType="textPersonName" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>

            <EditText
                android:id="@+id/confirmPassword_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Password"
                android:inputType="textPassword" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>

            <EditText
                android:id="@+id/password_editText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/password_icon"
                android:hint="Confirm password"
                android:inputType="textPassword" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#5a6e50"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="25dp"/>

            <Button
                android:id="@+id/regi_submit_button"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_grey"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/colorAccent"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
